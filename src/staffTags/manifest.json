{
	"$schema": "https://moonlight-mod.github.io/manifest.schema.json",
	"id": "staffTags",
	"version": "1.0.0",
	"apiLevel": 2,
	"meta": {
		"name": "Staff Tags",
		"tagline": "Display tags next to staff usernames based on permissions.",
		"authors": [
			"TheKodeToad"
		],
		"source": "https://github.com/TheKodeToad/moonlight-extensions/tree/main/src/staffTags",
		"tags": [
			"qol",
			"chat"
		]
	},
	"settings": {
		"style": {
			"type": "select",
			"options": [
				{
					"label": "Text",
					"value": "text"
				},
				{
					"label": "Icon",
					"value": "icon"
				}
			],
			"displayName": "Style",
			"default": "text",
			"advice": "none"
		},
		"rounded": {
			"type": "boolean",
			"displayName": "Rounded corners on tags",
			"default": true,
			"advice": "none"
		},
		"capitalizeText": {
			"type": "boolean",
			"displayName": "Capitalize text on tags",
			"default": true,
			"advice": "none"
		},
		"customizeTags": {
			"type": "boolean",
			"displayName": "Customize tags",
			"default": false,
			"advice": "none"
		},
		"tags": {
			"type": "custom",
			"default": [
				{
					"label": "Owner",
					"permissions": [
						"OWNER"
					],
					"icon": "crown"
				},
				{
					"label": "Admin",
					"permissions": [
						"ADMINISTRATOR"
					],
					"icon": "shield"
				},
				{
					"label": "Manager",
					"permissions": [
						"MANAGE_CHANNELS",
						"MANAGE_GUILD",
						"MANAGE_ROLES"
					],
					"icon": "wrench"
				},
				{
					"label": "Mod",
					"permissions": [
						"KICK_MEMBERS",
						"BAN_MEMBERS",
						"MUTE_MEMBERS",
						"DEAFEN_MEMBERS",
						"MOVE_MEMBERS",
						"MANAGE_NICKNAMES",
						"MODERATE_MEMBERS"
					],
					"icon": "hammer"
				}
			],
			"advice": "none"
		}
	},
	"dependencies": [
		"moonbase",
		"spacepack",
		"common",
		"componentEditor"
	]
}