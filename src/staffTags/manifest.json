{
	"$schema": "https://moonlight-mod.github.io/manifest.schema.json",
	"id": "staffTags",
	"version": "1.0.2",
	"apiLevel": 2,
	"meta": {
		"name": "Staff Tags",
		"tagline": "Display tags next to staff usernames based on permissions.",
		"changelog": "Fixed crashing on latest Discord stable.",
		"authors": ["TheKodeToad"],
		"source": "https://github.com/TheKodeToad/moonlight-extensions/tree/main/src/staffTags",
		"tags": ["qol", "chat"]
	},
	"settings": {
		"style": {
			"type": "select",
			"options": [
				{
					"label": "Text",
					"value": "text"
				},
				{
					"label": "Icon",
					"value": "icon"
				}
			],
			"displayName": "Style",
			"default": "text",
			"advice": "none"
		},
		"rounded": {
			"type": "boolean",
			"displayName": "Rounded tags",
			"description": "This will only show for the Text style.",
			"default": false,
			"advice": "none"
		},
		"capitalizeText": {
			"type": "boolean",
			"displayName": "Capitalize labels",
			"description": "This will only show for the Text style.",
			"default": true,
			"advice": "none"
		},
		"tags": {
			"type": "custom",
			"advice": "none"
		}
	},
	"dependencies": ["moonbase", "spacepack", "common", "componentEditor"]
}
